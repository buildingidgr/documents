{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "isolatedModules": false,
    "noEmit": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["node", "ws"],
    "esModuleInterop": true
  },
  "include": ["src/server/**/*.ts"]
} 