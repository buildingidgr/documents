{
  "info": {
    "name": "Documents API",
    "description": "API endpoints for the Documents service with Amazon S3 integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Documents",
      "item": [
        {
          "name": "List Documents",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/documents?limit=10&cursor=&orderBy=updatedAt&order=desc",
              "host": ["{{base_url}}"],
              "path": ["api", "documents"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "cursor",
                  "value": ""
                },
                {
                  "key": "orderBy",
                  "value": "updatedAt"
                },
                {
                  "key": "order",
                  "value": "desc"
                }
              ]
            }
          }
        },
        {
          "name": "Create Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/documents",
              "host": ["{{base_url}}"],
              "path": ["api", "documents"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Document\",\n  \"content\": {\n    \"type\": \"doc\",\n    \"content\": [\n      {\n        \"type\": \"paragraph\",\n        \"children\": [{ \"text\": \"Hello World\" }]\n      }\n    ]\n  }\n}"
            }
          }
        },
        {
          "name": "Get Document",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/documents/{{documentId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{documentId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Files",
      "item": [
        {
          "name": "Get Upload URL",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "upload"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fileName\": \"example.pdf\",\n  \"fileType\": \"application/pdf\",\n  \"fileSize\": 1024\n}"
            }
          }
        },
        {
          "name": "Upload to S3",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{s3_upload_url}}",
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "Content-Type",
                  "value": "{{content_type}}",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            }
          }
        },
        {
          "name": "List Files",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/files",
              "host": ["{{base_url}}"],
              "path": ["api", "files"]
            }
          }
        },
        {
          "name": "Get File",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/files/{{fileId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "files", "{{fileId}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": "your_auth_token_here"
    },
    {
      "key": "documentId",
      "value": "your_document_id_here"
    },
    {
      "key": "fileId",
      "value": "your_file_id_here"
    },
    {
      "key": "s3_upload_url",
      "value": "https://your-bucket.s3.region.amazonaws.com"
    },
    {
      "key": "content_type",
      "value": "application/pdf"
    }
  ]
} 