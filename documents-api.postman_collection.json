{
  "info": {
    "name": "Documents API",
    "description": "API endpoints for the Documents service with Amazon S3 integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Documents",
      "item": [
        {
          "name": "List Documents",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/documents?limit=10&cursor=&orderBy=updatedAt&order=desc",
              "host": ["{{base_url}}"],
              "path": ["api", "documents"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "cursor",
                  "value": ""
                },
                {
                  "key": "orderBy",
                  "value": "updatedAt"
                },
                {
                  "key": "order",
                  "value": "desc"
                }
              ]
            }
          }
        },
        {
          "name": "Create Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/documents",
              "host": ["{{base_url}}"],
              "path": ["api", "documents"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Document\",\n  \"content\": {\n    \"type\": \"doc\",\n    \"content\": [\n      {\n        \"type\": \"paragraph\",\n        \"children\": [{ \"text\": \"Hello World\" }]\n      }\n    ]\n  }\n}"
            }
          }
        },
        {
          "name": "Get Document",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/documents/{{documentId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "documents", "{{documentId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Files",
      "item": [
        {
          "name": "Get Upload URL",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "upload"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fileName\": \"example.pdf\",\n  \"fileType\": \"application/pdf\",\n  \"fileSize\": 1024\n}"
            }
          }
        },
        {
          "name": "Upload to S3",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{s3_upload_url}}",
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "Content-Type",
                  "value": "{{content_type}}",
                  "type": "text"
                },
                {
                  "key": "bucket",
                  "value": "{{bucket}}",
                  "type": "text"
                },
                {
                  "key": "X-Amz-Algorithm",
                  "value": "{{x_amz_algorithm}}",
                  "type": "text"
                },
                {
                  "key": "X-Amz-Credential",
                  "value": "{{x_amz_credential}}",
                  "type": "text"
                },
                {
                  "key": "X-Amz-Date",
                  "value": "{{x_amz_date}}",
                  "type": "text"
                },
                {
                  "key": "key",
                  "value": "{{file_key}}",
                  "type": "text"
                },
                {
                  "key": "Policy",
                  "value": "{{policy}}",
                  "type": "text"
                },
                {
                  "key": "X-Amz-Signature",
                  "value": "{{x_amz_signature}}",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "description": "Example response from Get Upload URL:\n{\n    \"fileId\": \"1a240f25-ab6f-4f12-8f51-e060d3ba4998\",\n    \"uploadUrl\": \"https://mechlabs.s3.eu-north-1.amazonaws.com/\",\n    \"fields\": {\n        \"Content-Type\": \"application/pdf\",\n        \"bucket\": \"mechlabs\",\n        \"X-Amz-Algorithm\": \"AWS4-HMAC-SHA256\",\n        \"X-Amz-Credential\": \"AKIAQ4NSBOTYKXLKUBDH/20250120/eu-north-1/s3/aws4_request\",\n        \"X-Amz-Date\": \"20250120T175208Z\",\n        \"key\": \"user_2prIb6NUsyTjopaWeWDjFW8jdGY/1a240f25-ab6f-4f12-8f51-e060d3ba4998/zenith.pdf\",\n        \"Policy\": \"...\",\n        \"X-Amz-Signature\": \"...\"\n    }\n}"
          }
        },
        {
          "name": "List Files",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/files",
              "host": ["{{base_url}}"],
              "path": ["api", "files"]
            }
          }
        },
        {
          "name": "Get File",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/files/{{fileId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "files", "{{fileId}}"]
            }
          }
        },
        {
          "name": "Delete File",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/files/{{fileId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "files", "{{fileId}}"]
            },
            "description": "Deletes a file from both S3 and the database.\nRequires:\n- fileId: The ID of the file to delete\n- Authorization: Bearer token\n\nReturns:\n- 204: File successfully deleted\n- 404: File not found\n- 500: Error deleting file"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": "your_auth_token_here"
    },
    {
      "key": "documentId",
      "value": "your_document_id_here"
    },
    {
      "key": "fileId",
      "value": "your_file_id_here"
    },
    {
      "key": "s3_upload_url",
      "value": "https://your-bucket.s3.region.amazonaws.com"
    },
    {
      "key": "content_type",
      "value": "application/pdf"
    },
    {
      "key": "bucket",
      "value": "your-bucket-name"
    },
    {
      "key": "x_amz_algorithm",
      "value": "AWS4-HMAC-SHA256"
    },
    {
      "key": "x_amz_credential",
      "value": "your-credential-here"
    },
    {
      "key": "x_amz_date",
      "value": "YYYYMMDDTHHMMSSZ"
    },
    {
      "key": "file_key",
      "value": "your-file-key-here"
    },
    {
      "key": "policy",
      "value": "your-policy-here"
    },
    {
      "key": "x_amz_signature",
      "value": "your-signature-here"
    }
  ]
} 